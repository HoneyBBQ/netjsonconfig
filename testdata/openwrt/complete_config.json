{
  "dns_servers": ["8.8.8.8", "1.1.1.1"],
  "dns_search": ["example.com", "local"],
  "general": {
    "hostname": "openwrt-test"
  },
  "interfaces": [
    {
      "name": "lan",
      "type": "bridge",
      "bridge_members": ["eth0", "eth1"],
      "proto": "static",
      "mtu": 1500,
      "addresses": [
        {
          "family": "ipv4",
          "proto": "static",
          "address": "192.168.1.1",
          "mask": 24
        }
      ]
    },
    {
      "name": "wan",
      "type": "ethernet",
      "proto": "dhcp"
    }
  ],
  "routes": [
    {
      "device": "lan",
      "destination": "10.0.0.0/8",
      "next": "192.168.1.254",
      "cost": 0
    }
  ],
  "ip_rules": [
    {
      "src": "192.168.1.0/24",
      "lookup": "100"
    }
  ],
  "ntp": {
    "enabled": true,
    "enable_server": false,
    "servers": ["0.pool.ntp.org", "1.pool.ntp.org"]
  },
  "openvpn": [
    {
      "name": "test_server",
      "ca": "/etc/openvpn/ca.crt",
      "cert": "/etc/openvpn/server.crt",
      "key": "/etc/openvpn/server.key",
      "dh": "/etc/openvpn/dh.pem",
      "proto": "udp",
      "port": 1194,
      "dev": "tun0",
      "mode": "server",
      "tls_server": true,
      "server": "10.8.0.0 255.255.255.0"
    }
  ],
  "files": [
    {
      "path": "/etc/config/custom",
      "mode": "0644",
      "contents": "# Custom configuration\n# Generated by netjsonconfig\n"
    },
    {
      "path": "/etc/banner",
      "mode": "0644",
      "contents": "Welcome to OpenWrt!\n"
    }
  ]
}

